<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Chatbot</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="chat-container">
        <div class="chat-header">
            <h1>AI Chatbot</h1>
        </div>

        <div id="chat-box" class="chat-box">
            <% if (response || error) { %>
                <div class="message user-message">
                    <div class="message-content"><strong>You:</strong> <%= prompt %></div>
                </div>
                <div class="message ai-message">
                    <% if (error) { %>
                        <div class="message-content error"><strong>Error:</strong> <%= error %></div>
                    <% } else { %>
                        <div class="message-content"><strong>AI:</strong> <%= response %></div>
                    <% } %>
                </div>
            <% } %>
        </div>

        <div class="chat-input">
            <form id="chat-form" action="/chat" method="POST">
                <input type="text" name="prompt" id="prompt" placeholder="Type your message..." autocomplete="off" required />
                <button type="submit">Send</button>
            </form>
        </div>
    </div>

    <script>
        // Scroll to the bottom of the chat box automatically when a new message is displayed
        const chatBox = document.getElementById('chat-box');
        chatBox.scrollTop = chatBox.scrollHeight;
    </script>
</body>
</html>
